{% extends "base.html.jinja" %}
{% block styles %}
.wrap-table-text {
    word-wrap: break-word;
    max-width: 160px;
}
{% endblock %}
{% block maincontent %}
<div class="row justify-content-center">
    <div class="col-auto">
        {% if sales_table_data %}
        <h2 class="text-center my-5">Goblin Cakes â€“ Sales by Quarter</h2>
        <p>
            <button type="button" class="btn btn-primary" onclick="create_entry_button()">Create Entry</button>
            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSearchBar" aria-expanded="false" aria-controls="collapseSearchBar">Search for entry</button>
            <button class="btn btn-outline-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseSortOptions" aria-expanded="false" aria-controls="collapseSortOptions">Sorting Options</button>
        </p>
        <div class="collapse" id="collapseSearchBar">
            <div class="card card-body">
                <div class="row">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-6">
                    {% include "search_bar.html.jinja" %}
                    </div>
                    <div class="col-sm-3"></div>
                </div>
            </div>
        </div>
        <div class="collapse" id="collapseSortOptions">
            <div class="card card-body">
                <form action="/" method="get">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="sortByInput1" class="form-label">Sort Entry Table By</label>
                            <select name="sort_by" class="form-select" aria-label="Sort Entry Status Table By" id="sortByInput1" value="{{ sort_table_by.attribute }}">
                                {% for element in table_attribute_list %}
                                <option {% if element.db_label==sort_table_by.attribute %}selected{% endif %} value="{{ element.db_label }}" label="{{ element.full_label }}"></option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="orderByDescendingInput1" class="form-label">Display Order</label>
                            <select name="order_by_descending" class="form-select" aria-label="Display Order" id="orderByDescendingInput1" value="{{ sort_table_by.order_by_descending }}">
                                <option {% if sort_table_by.order_by_descending=='0' %}selected{% endif %} value="0" label="Ascending"></option>
                                <option {% if sort_table_by.order_by_descending=='1' %}selected{% endif %} value="1" label="Descending"></option>
                            </select>
                        </div>
                    </div>
                    <div class="d-grid gap-2 col-6 mx-auto my-5">
                        <button type="submit" class="btn btn-primary btn-lg">SORT TABLE</button>
                    </div>
                </form>
            </div>
        </div>
        <table class="table table-responsive table-hover shadow p-3 mb-5 bg-body rounded">
            <thead>
                <tr>
                    {% for element in table_attribute_list %}
                    <th scope="col">{{ element.full_label }}</th>
                    {% endfor %}
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for element_row in sales_table_data %}
                <tr>
                {% for key, value in element_row.items() %}
                    {% if key == 'id' %}
                    <th scope="row">{{ value }}</th>
                    {% else %}
                    <td class="wrap-table-text {% if value|int != 0 %}text-center{% endif %}">{{ value }}</td>
                    {% endif %}
                {% endfor %}
                    <td>
                        <form id="delete_entry_form" method="post" action="/delete">
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">Show Actions</button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                                    <li><a class="dropdown-item" href="/view?id={{ element_row.id }}">View Entry</a></li>
                                    <li><a class="dropdown-item" href="/update?id={{ element_row.id }}">Update Entry</a></li>
                                    <li><a class="dropdown-item" href="#" onclick="confirm_deletion()">Delete Entry</a></li>
                                </ul>
                            </div>
                            <label for="uidInput1" class="form-label visually-hidden">UID</label>
                            <input name="id" type="hidden" class="form-control visually-hidden" id="uidInput1" value="{{ element_row.id }}">
                        </form>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
        {% else %}
        <div class="shadow p-3 mb-5 bg-body rounded justify-content-center text-center my-5">
            <h2 class="mb 3">No Entries found</h2>
            <button type="button" class="btn btn-primary btn-lg" onclick="create_ticket_button()">CREATE ENTRY</button>
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}
{% block scripts %}
    function confirm_deletion() {
        if (window.confirm("Do you really want to delete this entry?")) {
            //send_delete_post_request({"uid": ticket_uid});
            document.getElementById('delete_entry_form').submit();
        }
    }
    function create_entry_button() {
        window.location.href = "/create";
    }
{% endblock %}